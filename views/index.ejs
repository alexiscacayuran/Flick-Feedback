<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Flick Feedback</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://fonts.cdnfonts.com/css/broadsheet-ldo"
      rel="stylesheet"
    />
    <link
      href="https://fonts.cdnfonts.com/css/sweet-sans-pro"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Anton&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="main.css" />

    <script
      src="https://kit.fontawesome.com/176c4ea3a9.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <section class="hero">
      <div
        class="title-container container d-flex flex-column justify-content-center"
      >
        <h1 class="title">Flick Feedback</h1>
        <p>Share Ratings and Quick Takes on Your Favorite Films</p>
        <div class="mt-4">
          <button class="btn btn-primary" onclick="window.location.href='/add'">
            Add a review
          </button>
        </div>
      </div>
    </section>

    <section class="movie-list">
      <div class="container">
        <div class="sort-container d-flex align-items-center py-4">
          <span class="sort-container-title me-3">Sort by</span>
          <button class="btn btn-outline-light me-2">Recent</button>
          <button class="btn btn-outline-light me-2">Title</button>
          <button class="btn btn-outline-light me-2">Ratings</button>
        </div>
        <div class="movies-container d-flex flex-column align-items-center">
          <% for(let movie of movies){ %>
          <div class="movie-card d-flex mb-4">
            <div class="poster">
              <img class="poster-img" src="<%= movie.poster %>" />
            </div>

            <div
              class="movie-content d-flex flex-column justify-content-between"
            >
              <div class="d-flex flex-column justify-content-between mx-4 mt-4">
                <div class="movie-content-header mb-4">
                  <div class="d-flex align-items-center">
                    <div class="movie-content-title">
                      <h2 class="me-2">
                        <%= movie.title %><span> (<%= movie.year %>)</span>
                      </h2>
                    </div>
                    <div class="movie-content-imdb d-flex ms-2">
                      <p class="p-1">IMDb</p>
                      <p class="p-1"><%= movie.imdb_rating %></p>
                    </div>
                  </div>

                  <div class="movie-content-genres d-flex">
                    <% movie.genre.forEach((genre) => { %>
                    <p>
                      <span
                        class="movie-content-genre badge text-bg-primary me-2"
                        ><%= genre %></span
                      >
                    </p>
                    <% }); %>
                  </div>
                </div>

                <div class="movie-content-plot mb-2">
                  <h3 class="plot-title-text mb-1">Plot</h3>
                  <p><%= movie.plot %></p>
                </div>

                <div class="movie-content-actors mb-4">
                  <p class="movie-content-actors-text"><%= movie.actors %></p>
                </div>

                <div class="movie-content-notes d-flex mb-4">
                  <i class="fa-solid fa-quote-left fa-2xl pe-2"></i>
                  <p class="movie-content-notes-text"><%= movie.notes %></p>
                </div>
              </div>

              <div
                class="movie-content-footer d-flex justify-content-around p-2"
              >
                <div
                  class="movie-content-footer-ratings d-flex align-items-center"
                >
                  <p class="footer-title-text">Flick Rating:&nbsp;</p>
                  <div
                    class="flick-rating"
                    data-rating="<%= movie.flick_rating %>"
                  ></div>
                  <div class="movie-content-footer-stars">
                    <span class="star"><i class="fa-regular fa-star"></i></span>
                    <span class="star"><i class="fa-regular fa-star"></i></span>
                    <span class="star"><i class="fa-regular fa-star"></i></span>
                    <span class="star"><i class="fa-regular fa-star"></i></span>
                    <span class="star"><i class="fa-regular fa-star"></i></span>
                  </div>
                </div>

                <div class="movie-content-footer-watched d-flex">
                  <p class="footer-title-text">Date Watched:&nbsp;</p>
                  <p class="movie-content-footer-watched-text">
                    <%= movie.date_watched %>
                  </p>
                </div>

                <div class="movie-content-footer-recommended d-flex">
                  <p class="footer-title-text">Will Recommend:&nbsp;</p>
                  <p class="movie-content-footer-recommended-text">
                    <%= movie.recommended %>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
  <script>
    var ratings = [];
    $(".flick-rating").each(function () {
      ratings.push($(this).data("rating")); //subtract 1 to match the index of the :gt() selector
    });

    $(".movie-content-footer-stars").each(function (index) {
      console.log(this);
      $(this)
        .find("i")
        .slice(0, ratings[index])
        .addClass("fa-solid")
        .removeClass("fa-regular");
    });

    console.log(ratings);
  </script>
</html>
